<?xml version="1.0" encoding="utf-8"?>
<jeese.helpme.view.SildingFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/jeese.helpme"
    android:id="@+id/sildingFinishLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <include layout="@layout/toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <jeese.helpme.view.materialedittext.MaterialEditText
                android:id="@+id/password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:hint="填写密码"
                android:inputType="number"
                android:textSize="24sp"
                app:baseColor="@color/black"
                app:floatingLabel="normal"
                app:floatingLabelText="密码"
                app:floatingLabelTextSize="20sp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_below="@id/password_edit" />

            <Button
                android:id="@+id/finish_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/view"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorButton"
                android:text="完成"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

</jeese.helpme.view.SildingFinishLayout>